[module/updates]
type = custom/script
exec = ~/.config/bspwm/polybar/scripts/updates.sh
interval = 1000
label = ">%output% "
format-foreground = ${color.black}
format-background = ${color.grey}
format-prefix = "󰮯󰊠"
format-prefix-foreground = ${color.black}

[module/time]
type = internal/date
interval = 1
format-margin = 0
time = "%T"
time-alt = "%A, %m/%d/%y"
label = %time%
label-foreground = ${color.black}
label-background = ${color.grey}

[module/mod]
type = internal/bspwm
format = <label-mode>
format-foreground = ${color.black}
format-background = ${color.grey}
format-padding = 1
format-font = 5
label-monocle = "[M]"
label-tiled = "[]="
label-floating = ", ><>"
label-pseudotiled = ", Pseudo"
label-fullscreen = ", Full"
label-locked = " | Locked"
label-sticky = " | Sticky"
label-private = " | Private"

[module/bspwm]
type = internal/bspwm
pin-workspaces = true
inline-mode = false
enable-click = true
enable-scroll = true
reverse-scroll = true
fuzzy-match = true
format = <label-state>
format-font = 2
label-monitor = %name%
label-focused = %name%
label-focused-foreground = ${color.white}
label-focused-background = ${color.black}
label-focused-padding = 1
label-occupied = %name%
label-occupied-foreground = ${color.grey}
label-occupied-background = ${color.black}
label-occupied-padding = 1
label-urgent = %name%
label-urgent-foreground = ${color.red}
label-urgent-background = ${color.black}
label-urgent-padding = 1
label-empty = %name%
label-empty-foreground = ${color.black}
label-empty-background = ${color.black}
label-empty-padding = 1 

