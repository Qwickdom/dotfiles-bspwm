[module/time]
type = internal/date
interval = 1
format-margin = 0
time = "%H:%M"
time-alt = "%A, %m/%d/%y"
format-prefix = " "
format-prefix-foreground = ${color.black}
format-prefix-background = ${color.primary}
label = "%time%"
label-foreground = ${color.black}
label-background = ${color.primary}

